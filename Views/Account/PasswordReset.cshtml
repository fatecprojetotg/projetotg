@model projetotg.Models.AppUser

@{
ViewData["Title"] = "Redefinição de senha";
}

<body>
   <div class="row">
      <div class="col-sm-2 col-md-3"></div>
      <div class="col-sm-8 col-md-6">
         <div class="well bg-fill-1">
            <form id="passwordreset" name="passwordreset" class="form-horizontal" action="" method="post">
               <fieldset>
                  <div class="row">
                     <div class="clearfix border-bottom margin-bottom-xl">
                        <h3><strong>Redefinição de senha</strong></h3>
                     </div>
                  </div>
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="form-group">
                     <label name="Email" class="control-label">Digite seu email</label>
                     <input name="Email" class="form-control" /> 
                  </div>
                  <div class="form-group">
                     <div class="col-sm-3 col-md-3"></div>
                     <div class="col-sm-9 col-md-9">
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="col-sm-4 col-md-4"></div>
                     <div class="col-sm-4 col-md-4">
                     </div>
                     <div class="col-sm-4 col-md-4">
                        <button id="resetbtn" type="submit" class="btn btn-block btn-primary">Redefinir
                        </button> 
                     </div>
                  </div>
               </fieldset>
            </form>
            <div class="row"></div>
         </div>
      </div>
      <div class="col-sm-2 col-md-3"></div>
   </div>
   
</body>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}